mixin videoPlayer(video={})
  .videoPlayer#jsVideoPlayer
    video(src=video.src)
    .videoPlayer__controls
      .videoPlayer__columns
        span#jsVolumeBtn
          i.fas.fa-volume-up
        span
          span#jsCurrentTime 00:00:00
          |/
          span#jsTotalTime 10:00:00
      .videoPlayer__columns
        span#jsPlayBtn
          i.fas.fa-play
      .videoPlayer__columns
        span#jsFullScreenBtn
          i.fas.fa-expand