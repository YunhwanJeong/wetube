mixin videoPlayer(video={})
  .videoPlayer#jsVideoPlayer
    video(src=video.src)
    .videoPlayer__controls
      .videoPlayer__columns
        span
          i.fas.fa-volume-up
        span
          |00:00 / 10:00
      .videoPlayer__columns
        span#jsPlayButton
          i.fas.fa-play
      .videoPlayer__columns
        span
          i.fas.fa-expand