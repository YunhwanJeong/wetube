{
  "name": "wetube",
  "version": "1.0.0",
  "description": "Cloning Youtube with Vanilla and NodeJS",
  "author": "Chung Yun Hwan",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.7.4",
    "autoprefixer": "^9.7.1",
    "aws-sdk": "^2.582.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.1.2",
    "cookie-parser": "^1.4.4",
    "core-js": "^3.4.7",
    "css-loader": "^3.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.0",
    "get-blob-duration": "^1.1.0",
    "helmet": "^3.21.1",
    "mini-css-extract-plugin": "^0.8.0",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "node-sass": "^4.13.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.4",
    "regenerator-runtime": "^0.13.3",
    "sass-loader": "^8.0.0"
  },
  "browserslist": [
    "cover 99.5%"
  ],
  "nodemonConfig": {
    "ignore": [
      "src/assets",
      "src/static"
    ],
    "delay": "2000"
  },
  "scripts": {
    "dev:server": "nodemon --exec babel-node src/init.js",
    "dev:assets": "cd src && WEBPACK_ENV=development webpack -w",
    "build:assets": "cd src && WEBPACK_ENV=production webpack",
    "build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.config.js'",
    "copyAll": "cp -R src/static build && cp -R src/views build",
    "build": "npm run build:server && npm run build:assets && npm run copyAll",
    "prebuild": "rm -rf build",
    "tunnel": "lt --port 4000",
    "start": "PRODUCTION=true node build/init.js",
    "prestart": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "babel-loader": "^8.0.6",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^1.19.4",
    "prettier": "1.18.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
